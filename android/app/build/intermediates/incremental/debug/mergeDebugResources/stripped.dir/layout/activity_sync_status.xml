<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_status_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_status_description"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tv_sync_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_status_initializing"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#f0f0f0"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_retry_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_retry"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_test_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_test"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_info"
        android:textSize="12sp"
        android:textColor="#666666" />

</LinearLayout>